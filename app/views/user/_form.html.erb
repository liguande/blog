<form action="<%= url %>" method="post" data-remote="true">
	<div class="form-group">
	    <label for="username">用户名</label>
	    <input type="text" class="form-control" id="username" placeholder="请于此输入用户名" name="username" <% if user != nil %> value="<%= user.username %>" <% end %>>
  	</div>
  	<div class="form-group">
	    <label for="password">密码</label>
	    <input type="password" class="form-control" id="password" placeholder="请于此输入密码" name="password" <% if user != nil %> value="<%= user.password %>"
	    <% end %>
	    >
  	</div>
  	<% if lOrR == 0 %>
	  	<button type="submit" class="btn btn-info">登录</button>
	<% elsif lOrR == 2 %>
		<button type="submit" class="btn btn-primary">修改</button>
	<% else %>
		<button type="submit" class="btn btn-danger">注册</button>
	<% end %>
</form>