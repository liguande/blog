<table class="table table-bordered">
	<thead>
		<tr>
			<th>用户编号</th>
			<th>用户姓名</th>
			<th>用户密码</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		<% @user.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.username %></td>
				<td><%= user.password %></td>
				<td>
					<button type="button" class="btn btn-danger">删除</button>
					<button type="button" class="btn btn-primary">修改</button>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>