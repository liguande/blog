<table class="table table-bordered text-center">
	<thead>
		<tr>
			<th>用户编号</th>
			<th>用户姓名</th>
			<th>用户密码</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
		<% @user.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.username %></td>
				<td><%= user.password %></td>
				<td>
					<a href="<%= delete_path(user.id) %>" class="btn btn-danger">删除</a>
					<a href="#" class="btn btn-primary">修改</a>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>